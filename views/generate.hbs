<div class="container">
    <div class="d-flex justify-content-center">
        <h6>Success! Please use this link:</h6>
    </div>
    <div class="d-flex justify-content-center">
        <input type="text" class="form-control" value="{{newUrl}}" id="newUrl"
            aria-describedby="addon-wrapping"></input>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-dark mt-2" onclick="copyUrl()">
            <i class="far fa-copy ml-1 mr-1"></i>Copy
        </button>
    </div>
</div>

<script>
    function copyUrl() {
        document.querySelector('#newUrl').select()
        document.execCommand("Copy")
        alert("URL CopiedÔºÅ")
    }
</script>